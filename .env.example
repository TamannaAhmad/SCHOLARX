# Django Settings
# For production testing: DEBUG=False
DEBUG=False
# Generate a new SECRET_KEY using: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
# Must be at least 50 characters and NOT start with 'django-insecure-'
SECRET_KEY=your-very-long-random-secret-key-here-at-least-50-characters-long
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# CORS Settings
# For development: use localhost URLs, For production: use your domain
CORS_ALLOW_ALL_ORIGINS=False
CORS_ALLOWED_ORIGINS=http://127.0.0.1:5500,http://localhost:5500,http://localhost:3000,http://127.0.0.1:3000,http://127.0.0.1:8000
CSRF_TRUSTED_ORIGINS=http://127.0.0.1:5500,http://localhost:5500,http://localhost:3000,http://127.0.0.1:3000,http://127.0.0.1:8000

# Cookie Security
# For local testing without HTTPS: False
CSRF_COOKIE_SECURE=False
SESSION_COOKIE_SECURE=False

# HTTPS and Security Headers
# For local testing without HTTPS: False and 0
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=0

# Logging
LOG_LEVEL=INFO

# Database
DB_NAME=SCHOLARX
DB_USER=postgres
DB_PASSWORD=your-db-password
DB_HOST=localhost
DB_PORT=5432

# Email Configuration
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@your-domain.com

# Frontend URLs
# For development: use localhost, For production: use your domain
FRONTEND_URL=http://localhost:5500
FRONTEND_BASE_URL=http://localhost:5500

# Gemini API
GEMINI_API_KEY=your-gemini-api-key
